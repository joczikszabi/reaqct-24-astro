---
import { Image } from "astro:assets";
import { dateAgo } from "../helpers";

interface Props {
  title: string;
  thumbnailSourceUrl: string;
  thumbnailAlt: string;
  previewText: string;
  createdAt: string;
}

const { title, thumbnailSourceUrl, thumbnailAlt, previewText, createdAt } =
  Astro.props;
---

<div class="flex gap-4 hover:bg-white/[.02] w-full rounded-md">
  <Image
    src={thumbnailSourceUrl}
    alt={thumbnailAlt}
    width="150"
    height="150"
    class="w-[125px] md:w-[175px] h-[125px] md:h-[175px] rounded-md"
  />

  <div class="flex flex-col h-125px md:h-[175px] py-2 w-full justify-between">
    <div class="flex flex-col gap-1">
      <h2 class="text-xl font-semibold text-text-title">{title}</h2>
      <div class="text-sm w-fit h-[40px] md:h-[70px] overflow-hidden">
        <p class="text-ellipsis" set:html={previewText} />
      </div>
    </div>
    <p class="text-sm">{dateAgo(createdAt)}</p>
  </div>
</div>
