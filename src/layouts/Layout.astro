---
import "@fontsource-variable/montserrat";
import "../styles/global.css";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Recent Advances in Quantum Computing and Technology"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="title" property="og:title" content="ReAQCT 2024" />
    <meta
      name="description"
      property="og:description"
      content="Recent Advances in Quantum Computing and Technology"
    />
    <meta name="type" property="og:type" content="website" />
    <meta
      name="image"
      property="og:image"
      content="https://www.reaqct.org/_astro/home_background_image.nRF6PacD_Z1aNPAs.webp"
    />
    <meta name="url" property="og:url" content="https://www.reaqct.org" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
